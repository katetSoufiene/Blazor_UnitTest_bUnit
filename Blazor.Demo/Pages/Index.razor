@page "/"

<h1>Hello, world!</h1>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <form role="form">
                <div class="form-group">

                    <label for="email">
                        Email address
                    </label>
                    <input type="email" class="form-control" id="email" @bind-value="User.Email" />
                </div>
                <div class="form-group">

                    <label for="password">
                        Password
                    </label>
                    <input type="password" class="form-control" id="password" @bind-value="User.Password" />
                </div>
                <button type="button" class="btn btn-primary" @onclick="Login">
                    Submit
                </button>
            </form>
            <br>
            <div class="alert alert-danger" hidden="@(ErrorMessage == string.Empty)" role="alert">
                @ErrorMessage
            </div>
        </div>
    </div>
</div>
